            lacp {
                active;
                system-id 00:00:5e:e4:31:57;
            }
        }
        unit 0 {
            family ethernet-switching {
                interface-mode {{ INTS['int-mode'] }};
                vlan {
                    members {{ INTS['vlanlist'] }};
                }
            }
        }
    }
{% endfor %}{% endif %}
